@* تأكد من تضمين Layout المناسب *@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="wordset">
            <ul>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf">
                        <img src="~/assets/img/icons/pdf.svg" alt="img">
                    </a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel">
                        <img src="~/assets/img/icons/excel.svg" alt="img">
                    </a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="print">
                        <img src="~/assets/img/icons/printer.svg" alt="img">
                    </a>
                </li>
            </ul>
        </div>

        <div class="card">
            <div class="card-body">
               
                <div class="table-responsive" dir="rtl">
                    <table id="datanew" class="table  table-bordered table-hover text-center align-middle w-100">
                        <thead>
                            <tr>
                               
                                <th>م</th>
                                <th>اسم الإستراتيجية</th>
                                <th>الفئة</th>
                                <th>ملاحظات</th>
                                <th>الفاصل</th>
                                <th>حذف/تعديل</th>
                                <th>عدد الشركات</th>
                                <th>عرض</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- سيتم ملء الصفوف ديناميكيًا عبر AJAX -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
   

    <script>
          $(document).ready(function () {
            let page = 1;
            const pageSize = 10;
            let isLoading = false;
            let totalRecords = 0;

            const table = $('#datanew').DataTable({
                paging: false,
                searching: true,
                ordering: true,
                info: false,
                deferRender: true, // تحسين الأداء عند تحميل بيانات كبيرة
                columnDefs: [
                    { targets: '_all', defaultContent: '-' } // عرض '-' للقيم الفارغة
                ]
            });

            function loadData() {
                if (isLoading || (totalRecords > 0 && (page - 1) * pageSize >= totalRecords)) return;
                isLoading = true;
                $('#loading').show();

                $.ajax({
                    url: '/FormulasSetting/LoadData',
                    method: 'GET',
                    data: { page: page, pageSize: pageSize },
                    success: function (response) {
                        if (response.success) {
                            totalRecords = response.totalRecords;

                            // تحضير البيانات لإضافتها دفعة واحدة
                            const rows = response.data.map((item, index) => [
                                (page - 1) * pageSize + index + 1,
                                item.name || '-',
                                item.type || '-',
                                item.note || '-',
                                `<span class="badges bg-lightgreen">${item.isIndicator === 1 ? 'Active' : 'Inactive'}</span>`,
                                item.separater || '-',
                                `<a class="me-3" href="/Strategies/Edit/${item.id}">
                                    <i class="fas fa-edit icon-size icon-edit"></i>
                                 </a>
                                 <a class="me-3 confirm-text" href="javascript:void(0);" onclick="confirmDelete(${item.id})">
                                    <i class="fas fa-trash-alt icon-size icon-delete"></i>
                                 </a>
                                 <a href="/RecommendationResult/RecommendationResult?criteriaId=${item.id}&selectedDate=${item.selectedDate ? new Date(item.selectedDate).toISOString().split('T')[0] : ''}&sortColumn=${item.sortColumn || ''}&sortOrder=${item.sortOrder || ''}&viewIndex=${item.viewIndex || 0}" class="btn btn-sm btn-primary">عرض</a>`,
                                item.companiesCount || 0,
                                `<a href="/Strategies/View/${item.id}" class="btn btn-sm btn-primary">عرض</a>`
                            ]);

                            // إضافة الصفوف دفعة واحدة
                            table.rows.add(rows).draw(false);

                            page++;
                            isLoading = false;
                            $('#loading').hide();

                            if (response.data.length === pageSize) {
                                setTimeout(loadData, 500); // تقليل التأخير لتحسين تجربة المستخدم
                            }
                        } else {
                            console.error('خطأ: ' + response.message);
                            alert('خطأ: ' + response.message);
                            isLoading = false;
                            $('#loading').hide();
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('خطأ AJAX:', status, error);
                        alert('حدث خطأ أثناء جلب البيانات');
                        isLoading = false;
                        $('#loading').hide();
                    }
                });
            }

            function confirmDelete(id) {
                if (confirm('هل أنت متأكد من حذف هذه الإستراتيجية؟')) {
                    $.ajax({
                        url: '/Strategies/Delete',
                        method: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                table.row($(`a[onclick="confirmDelete(${id})"]`).closest('tr')).remove().draw();
                                alert('تم الحذف بنجاح');
                            } else {
                                alert('فشل الحذف: ' + response.message);
                            }
                        },
                        error: function () {
                            alert('حدث خطأ أثناء الحذف');
                        }
                    });
                }
            }

            loadData();
        });
    </script>
}

<div id="loading" style="display: none; text-align: center; margin-top: 10px;">
    <img src="/images/loading.gif" width="32" height="32" alt="Loading" />
</div>



