@using Microsoft.AspNetCore.Identity
@model StockSystem2025.ViewModel.RegisterEditViewModel

@{
    ViewData["Title"] = "Edet";
    Layout = "_Layout";

}
<div class="layout-px-spacing">
    <div id="headerWrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-12 text-center">
                    <h2 class="main-heading">تعديل بيانات المستخدم</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div id="privacyWrapper" class="">
                    <div class="privacy-container">
                        <div class="privacyContent">
                            <div class="d-flex justify-content-between privacy-head">
                                <div class="privacyHeader">
                                    <h1>تعديل  </h1>
                                </div>
                            </div>
                            <div class="privacy-content-container">
                                <section>
                                    <form asp-action="Edet" method="post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <input type="hidden" asp-for="Id" />
                                                <div class="form-group">
                                                    <label الايميلclass="control-label"></label>
                                                    <input asp-for="Email" class="form-control" />
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                                @*   <div class="form-group">
                                                <label   class="control-label">كلمة المرور</label>
                                                <input  asp-for="password" class="form-control" />
                                                <span asp-validation-for="password" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                <label  class="control-label"> تاكيد كلمة المرور</label>
                                                <input asp-for="ConformPassword" class="form-control" />
                                                <span asp-validation-for="ConformPassword" class="text-danger"></span>
                                                </div> *@
                                                <div class="form-group">
                                                    <label class="control-label"> اسم المستخدم</label>
                                                    <input asp-for="fullname" class="form-control" />
                                                    <span asp-validation-for="fullname" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label"> اختر الصلاحية</label>
                                                    <select name="rolename" class="input">
                                                        @foreach (var item in (List<IdentityRole>)ViewBag.roles)
                                                        {
                                                            <option value="@item.Name">@item.Name</option>
                                                        }
                                                    </select>
                                                    <input disabled value="@ViewBag.role" class="form-control" />
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                                                    <label class="form-check-label"> تفعيل المستخدم </label>
                                                </div>
                                                <br />
                                                <div class="form-group">
                                                    <input type="submit" value="حــفظ" class="btn btn-primary" />
                                                    <a asp-controller="AccountCsontroller" asp-action="Index" class="btn btn-primary">الرجوع للقائمة السابقة</a>
                                                </div>

                                            </div>
                                    </form>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>