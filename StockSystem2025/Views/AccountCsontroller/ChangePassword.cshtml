@model StockSystem2025.ViewModel.ChangePasswordViewModel

@{
    Layout = "_Layout";

    ViewData["Title"] = "Edet";
}

<div class="page-wrapper">
    <div class="content">
    <div id="headerWrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-12 text-center">
                    <h2 class="main-heading">تعديل  كلمة المرور</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div id="privacyWrapper" class="">
                    <div class="privacy-container">
                        <div class="privacyContent">
                            <div class="d-flex justify-content-between privacy-head">
                                <div class="privacyHeader">
                                    <h1>تعديل</h1>
                                </div>
                            </div>
                            <section>
                                <form asp-action="ChangePassword">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="form-group">
                                <label class="control-label">كلمة المرور الجديدة</label>
                                <input type="password" asp-for="password" class="form-control" />
                                <span asp-validation-for="password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">تأكيد كلمة المرور الجديدة</label>
                                <input type="password" asp-for="ConformPassword" class="form-control" />
                                <span asp-validation-for="ConformPassword" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" value="حفظ" class="btn btn-primary" />
                                <a asp-controller="AccountCsontroller" asp-action="Index" class="btn btn-primary">الرجوع للقائمة السابقة</a>
                            </div>
                            </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script src="~/js/lib/jquery/jquery.min.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}