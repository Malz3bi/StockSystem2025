@model StockSystem2025.Models.RecommendationResultViewModel
@using StockSystem2025.AppCode
@{
    ViewData["Title"] = "عرض نتائج التوصيات";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.9.2/jquery.contextMenu.min.css" />
    <style>
        .grid {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }

        .rdHeader {
            background-color: #f8f9fa;
            font-weight: bold;
            text-align: center;
            border: 2px solid #dee2e6;
        }

        .rdSubHeader {
            background-color: #e9ecef;
            font-weight: bold;
        }

        .left-b-thick {
            border-left: 2px solid #dee2e6;
        }

        .f-17 {
            font-size: 17px;
        }

        .tooltip {
            position: relative;
        }

            .tooltip::after {
                content: attr(title);
                visibility: hidden;
                position: absolute;
                background-color: #333;
                color: #fff;
                padding: 5px;
                border-radius: 4px;
                bottom: 100%;
                left: 50%;
                transform: translateX(-50%);
                white-space: nowrap;
            }

            .tooltip:hover::after {
                visibility: visible;
            }

        .stats-div {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .stats {
            border: 1px solid #dee2e6;
            padding: 10px;
        }

        .up {
            color: green;
        }

        .down {
            color: red;
        }

        .loading-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .loading-modal-center {
            text-align: center;
            color: white;
        }
    </style>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.9.2/jquery.contextMenu.min.js"></script>
    <script>
        $(document).ready(function () {
            let companyCode = null;

            $.contextMenu({
                selector: '.company-row, .openmenu',
                trigger: $('.openmenu').length ? 'left' : 'right',
                callback: function (key, options) {
                    const $row = options.$trigger.closest('tr');
                    const rowIndex = $row.index() - 2; // Adjust for header rows
                    companyCode = $(`#company-code-${rowIndex}`).text();
                    const [action, followListId] = key.split(';');
                    if (action === 'add') {
                        $.post({
                            url: '@Url.Action("AddToFollowList")',
                            data: { followListId, companyCode, criteriaId: '@Model.Criteria?.Index', date: '@Model.SelectedDate?.ToString("yyyy-MM-dd")', viewIndex: '@Model.ViewIndex', sortColumn: '@Model.SortColumn', sortOrder: '@Model.SortOrder' },
                            success: function () { location.reload(); },
                            beforeSend: function () { $('#loadingModal').show(); },
                            complete: function () { $('#loadingModal').hide(); }
                        });
                    }
                },
                items: {
        @foreach (var followList in Model.FollowLists)
        {
            var color = string.IsNullOrEmpty(followList.Color) ? "ffffff00" : followList.Color.Substring(3) + "75";
            @($"\"add;{followList.Id}\": {{ name: \"{followList.Name}\", icon: \"add\", style: \"background-color: #{color}\" }},")
        }
                }
            });
        });
    </script>
}
<div class="page-wrapper">
    <div class="content">
        <h2>@ViewData["Title"]</h2>

        <!-- General Indicators -->
        <table class="table table-bordered grid">
            <thead class="rdHeader">
                <tr>
                    <th>رمز الشركة</th>
                    <th>اسم الشركة</th>
                    <th>الإفتتاح</th>
                    <th>الأعلى</th>
                    <th>الأدنى</th>
                    <th>الإغلاق</th>
                    <th>قيمة التغيير</th>
                    <th>نسبة التغيير</th>
                    <th>كمية التداول</th>
                    <th>إيجابي</th>
                    <th>سلبي</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var indicator in Model.GeneralIndicators)
                {
                    <tr class="rdSubHeader">
                        <td><a href="CompanyDetails?code=@indicator.Sticker">@indicator.Sticker</a></td>
                        <td><a href="CompanyDetails?code=@indicator.Sticker">@indicator.Sname</a></td>
                        <td>@ConvertHelper.FormatDouble(indicator.Sopen)</td>
                        <td>@ConvertHelper.FormatDouble(indicator.Shigh)</td>
                        <td>@ConvertHelper.FormatDouble(indicator.Slow)</td>
                        <td>@ConvertHelper.FormatDouble(indicator.Sclose)</td>
                        <td>@Html.Raw(ControlHelper.GetChangeValueControl(indicator.ChangeValue))</td>
                        <td>@Html.Raw(ControlHelper.GetChangeValueControlPercent(indicator.ChangeRate))</td>
                        <td>@indicator.Svol</td>
                        <td>@ConvertHelper.FormatDouble(indicator.IndicatorIn)</td>
                        <td>@ConvertHelper.FormatDouble(indicator.IndicatorOut)</td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />

        <!-- Stats and Date Picker -->
        <div class="stats-div">
            <table class="stats">
                <tr><th colspan="4">القطاعات</th></tr>
                <tr>
                    <th>القطاعات</th>
                    <th class="up">صاعدة</th>
                    <th class="down">هابطة</th>
                    <th>بدون تغيير</th>
                </tr>
                <tr>
                    <td>القطاعات</td>
                    <td class="up">@Model.SectorStats.UpCount</td>
                    <td class="down">@Model.SectorStats.DownCount</td>
                    <td>@Model.SectorStats.NoChangeCount</td>
                </tr>
            </table>

            <div class="stats">
                <b>نتائج توصيات يوم:</b>
                <form asp-action="ChangeDate" method="post">
                    <input type="date" asp-for="SelectedDate" min="@Model.MinDate?.ToString("yyyy-MM-dd")" max="@Model.MaxDate?.ToString("yyyy-MM-dd")" class="form-control d-inline-block w-auto" />
                    <input type="hidden" asp-for="Criteria.Index" />
                    <input type="hidden" value="0" name="ViewIndex" />   
                    <input type="hidden" asp-for="SortColumn" />
                    <input type="hidden" asp-for="SortOrder" />
                    <button type="submit" class="btn btn-primary btn-sm">تحديث</button>
                </form>
                <form asp-action="NextDate" method="post" class="d-inline">
                    <input type="hidden" asp-for="SelectedDate" />
                    <input type="hidden" asp-for="Criteria.Index" />
                    <input type="hidden" value="0" name="ViewIndex" />
                    <input type="hidden" asp-for="SortColumn" />
                    <input type="hidden" asp-for="SortOrder" />
                    <button type="submit" class="btn btn-secondary btn-sm">▲</button>
                </form>
                <form asp-action="PreviousDate" method="post" class="d-inline">
                    <input type="hidden" asp-for="SelectedDate" />
                    <input type="hidden" asp-for="Criteria.Index" />
                    <input type="hidden" value="0" name="ViewIndex" />
                    <input type="hidden" asp-for="SortColumn" />
                    <input type="hidden" asp-for="SortOrder" />
                    <button type="submit" class="btn btn-secondary btn-sm">▼</button>
                </form>
                @if (Model.ShowError)
                {
                    <span class="text-danger">يرجى إدخال تاريخ صحيح</span>
                }
            </div>

            <table class="stats">
                <tr><th colspan="4">الشركات</th></tr>
                <tr>
                    <th>الشركات</th>
                    <th class="up">صاعدة</th>
                    <th class="down">هابطة</th>
                    <th>بدون تغيير</th>
                </tr>
                <tr>
                    <td>الشركات</td>
                    <td class="up">@Model.CompanyStats.UpCount</td>
                    <td class="down">@Model.CompanyStats.DownCount</td>
                    <td>@Model.CompanyStats.NoChangeCount</td>
                </tr>
            </table>
        </div>

        <hr />

        <!-- Criteria Details -->
        @if (Model.Criteria != null)
        {
            <table class="table table-bordered grid" style="width: 90%; margin: 0 auto;">
                <thead class="rdHeader">
                    <tr>
                        <th>رقم التسلسل</th>
                        <th>الفاصل</th>
                        <th>اسم المعيار</th>
                        <th>نوع المعيار</th>
                        <th>ملاحظات</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Criteria.Index</td>
                        <td>@Model.Criteria.Separator</td>
                        <td>@Model.Criteria.Name</td>
                        <td>@Model.Criteria.Type</td>
                        <td>@Model.Criteria.Notes</td>
                    </tr>
                </tbody>
            </table>
        }

        <!-- Recommendations -->
