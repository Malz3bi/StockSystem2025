                        <th colspan="3" class="left-b-thick">الإفتتاح</th>
                        <th colspan="3" class="left-b-thick">الحد الأعلى</th>
                        <th colspan="3" class="left-b-thick">الحد الأدنى</th>
                        <th colspan="3" class="left-b-thick">الإغلاق</th>
                    </tr>
                    <tr>
                        <th>م</th>
                        <th><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="Sticker" asp-route-sortOrder="@(Model.SortColumn == "Sticker" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">رمز @(Model.SortColumn == "Sticker" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="Sname" asp-route-sortOrder="@(Model.SortColumn == "Sname" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">اسم الشركة @(Model.SortColumn == "Sname" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="left-b-thick">سعر التوصية</th>
                        <th class="f-17">المتوقع</th>
                        <th class="f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="ExpectedOpenValue" asp-route-sortOrder="@(Model.SortColumn == "ExpectedOpenValue" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">القيمة @(Model.SortColumn == "ExpectedOpenValue" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="left-b-thick f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="ExpectedOpenPercent" asp-route-sortOrder="@(Model.SortColumn == "ExpectedOpenPercent" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">النسبة @(Model.SortColumn == "ExpectedOpenPercent" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="f-17">الإفتتاح</th>
                        <th class="f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="SOpen" asp-route-sortOrder="@(Model.SortColumn == "SOpen" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">القيمة @(Model.SortColumn == "SOpen" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="left-b-thick f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="OpeningGapRate" asp-route-sortOrder="@(Model.SortColumn == "OpeningGapRate" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">النسبة @(Model.SortColumn == "OpeningGapRate" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="f-17">الأعلى</th>
                        <th class="f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="Shigh" asp-route-sortOrder="@(Model.SortColumn == "Shigh" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">القيمة @(Model.SortColumn == "Shigh" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="left-b-thick f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="UpperLimitRate" asp-route-sortOrder="@(Model.SortColumn == "UpperLimitRate" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">النسبة @(Model.SortColumn == "UpperLimitRate" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="f-17">الأدنى</th>
                        <th class="f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="Slow" asp-route-sortOrder="@(Model.SortColumn == "Slow" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">القيمة @(Model.SortColumn == "Slow" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="left-b-thick f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="LowerLimitRate" asp-route-sortOrder="@(Model.SortColumn == "LowerLimitRate" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">النسبة @(Model.SortColumn == "LowerLimitRate" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="f-17">الإغلاق</th>
                        <th class="f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="Sclose" asp-route-sortOrder="@(Model.SortColumn == "Sclose" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">القيمة @(Model.SortColumn == "Sclose" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                        <th class="left-b-thick f-17"><a asp-action="Result" asp-route-id="@Model.Criteria?.Index" asp-route-date="@Model.SelectedDate?.ToString("yyyy-MM-dd")" asp-route-viewIndex="@Model.ViewIndex" asp-route-sortColumn="ChangeRate" asp-route-sortOrder="@(Model.SortColumn == "ChangeRate" && Model.SortOrder == "ASC" ? "DESC" : "ASC")">النسبة @(Model.SortColumn == "ChangeRate" ? (Model.SortOrder == "ASC" ? "▲" : "▼") : "")</a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rec in Model.Recommendations.Select((value, i) => new { value, i }))
                    {
                        <tr class="@(rec.value.IsIndicator ? "rdSubHeader" : "company-row")" style="@(rec.value.IsSpecial ? $"background-color: {Model.SpecialCompanyColor};" : "")">
                            <td style="@(!string.IsNullOrEmpty(rec.value.FollowListColor) ? $"background-color: #{rec.value.FollowListColor};" : "")">@(rec.i + 1)</td>
                            <td><a href="CompanyDetails?code=@rec.value.Sticker" id="company-code-@rec.i">@rec.value.Sticker</a></td>
                            <td class="@(!string.IsNullOrEmpty(rec.value.FollowListNames) ? "tooltip" : "")" title="@rec.value.FollowListNames"><a href="CompanyDetails?code=@rec.value.Sticker" target="_blank">@rec.value.Sname</a></td>
                            <td class="left-b-thick f-17">@Html.Raw(ControlHelper.GetControlWithCompareValues(rec.value.Sclose, rec.value.NextSclose))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetControlWithCompareValues(rec.value.ExpectedOpen, rec.value.Sclose))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetExpectedOpenControlWithCompareValuesAndControlValue(rec.value.ExpectedOpen, rec.value.Sclose, rec.value.ExpectedOpenValue, false, rec.value.ExpectedOpen))</td>
                            <td class="left-b-thick f-17">@Html.Raw(ControlHelper.GetExpectedOpenControlWithCompareValuesAndControlValue(rec.value.ExpectedOpen, rec.value.Sclose, rec.value.ExpectedOpenPercent, true, rec.value.ExpectedOpen))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetControlWithCompareValues(rec.value.SOpen, rec.value.Sclose))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetControlWithCompareValuesAndControlValue(rec.value.SOpen, rec.value.Sclose, rec.value.OpeningGapValue, false))</td>
                            <td class="left-b-thick f-17">@Html.Raw(ControlHelper.GetControlWithCompareValuesAndControlValue(rec.value.SOpen, rec.value.Sclose, rec.value.OpeningGapRate, true))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetControlWithCompareValues(rec.value.Shigh, rec.value.Sclose))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetControlWithCompareValuesAndControlValue(rec.value.Shigh, rec.value.Sclose, rec.value.UpperLimitValue, false))</td>
                            <td class="left-b-thick f-17">@Html.Raw(ControlHelper.GetControlWithCompareValuesAndControlValue(rec.value.Shigh, rec.value.Sclose, rec.value.UpperLimitRate, true))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetControlWithCompareValues(rec.value.Slow, rec.value.Sclose))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetControlWithCompareValuesAndControlValue(rec.value.Slow, rec.value.Sclose, rec.value.LowerLimitValue, false))</td>
                            <td class="left-b-thick f-17">@Html.Raw(ControlHelper.GetControlWithCompareValuesAndControlValue(rec.value.Slow, rec.value.Sclose, rec.value.LowerLimitRate, true))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetControlWithCompareValues(rec.value.PrevSclose, rec.value.Sclose))</td>
                            <td class="f-17">@Html.Raw(ControlHelper.GetControlWithCompareValuesAndControlValue(rec.value.PrevSclose, rec.value.Sclose, rec.value.ChangeValue, false))</td>
                            <td class="left-b-thick f-17">@Html.Raw(ControlHelper.GetControlWithCompareValuesAndControlValue(rec.value.PrevSclose, rec.value.Sclose, rec.value.ChangeRate, true))</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <form asp-action="SwitchView" method="post" class="d-inline">
                <input type="hidden" name="CriteriaId" value="@Model.Criteria.Index" />
                <input type="hidden" asp-for="SelectedDate" />
                <input type="hidden" value="0" name="ViewIndex" />
                <input type="hidden" asp-for="SortColumn" />
                <input type="hidden" asp-for="SortOrder" />
                <button type="submit"  class="btn btn-info mb-3">عرض نسبة الأرباح والخسائر</button>
            </form>
