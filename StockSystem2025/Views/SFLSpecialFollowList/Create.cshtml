@model StockSystem2025.Models.FollowList

@{
    ViewData["Title"] = "إنشاء قائمة متابعة";
}
<div class="page-wrapper">
    <div class="container mt-5" dir="rtl">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">إنشاء قائمة متابعة جديدة</h3>
                    </div>
                    <div class="card-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="toast align-items-center text-white bg-danger border-0 position-fixed top-0 start-0 m-3" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
                                <div class="d-flex">
                                    <div class="toast-body">
                                        @TempData["ErrorMessage"]
                                    </div>
                                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                                </div>
                            </div>
                        }

                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="row">
                                <div class="col-12 col-md-4 mb-3">
                                    <label asp-for="Name" class="form-label fw-bold">الاسم</label>
                                    <input asp-for="Name" class="form-control" placeholder="أدخل اسم القائمة" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4 mb-3">
                                    <label asp-for="Color" class="form-label fw-bold">اللون</label>
                                    <input asp-for="Color" class="form-control" type="color" />
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4 mb-3">
                                    <label asp-for="StopLoss" class="form-label fw-bold">وقف الخسارة</label>
                                    <input asp-for="StopLoss" class="form-control" type="number" step="0.01" placeholder="مثال: 100.50" />
                                    <span asp-validation-for="StopLoss" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-4 mb-3">
                                    <label asp-for="FirstSupport" class="form-label fw-bold">الدعم الأول</label>
                                    <input asp-for="FirstSupport" class="form-control" type="number" step="0.01" placeholder="مثال: 200.75" />
                                    <span asp-validation-for="FirstSupport" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4 mb-3">
                                    <label asp-for="SecondSupport" class="form-label fw-bold">الدعم الثاني</label>
                                    <input asp-for="SecondSupport" class="form-control" type="number" step="0.01" placeholder="مثال: 300.25" />
                                    <span asp-validation-for="SecondSupport" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4 mb-3">
                                    <label asp-for="FirstTarget" class="form-label fw-bold">الهدف الأول</label>
                                    <input asp-for="FirstTarget" class="form-control" type="number" step="0.01" placeholder="مثال: 400.00" />
                                    <span asp-validation-for="FirstTarget" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-4 mb-3">
                                    <label asp-for="SecondTarget" class="form-label fw-bold">الهدف الثاني</label>
                                    <input asp-for="SecondTarget" class="form-control" type="number" step="0.01" placeholder="مثال: 500.50" />
                                    <span asp-validation-for="SecondTarget" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4 mb-3">
                                    <label asp-for="ThirdTarget" class="form-label fw-bold">الهدف الثالث</label>
                                    <input asp-for="ThirdTarget" class="form-control" type="number" step="0.01" placeholder="مثال: 600.75" />
                                    <span asp-validation-for="ThirdTarget" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4 mb-3 d-flex align-items-end">
                                    <div class="d-flex justify-content-between w-100">
                                        <button type="submit" class="btn btn-primary">إنشاء</button>
                                        <a asp-action="Index" class="btn btn-outline-secondary">رجوع إلى القائمة</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var toastEl = document.querySelector('.toast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });
    </script>
}